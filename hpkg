#!/bin/bash

# Hydra Package Manager (hpkg)
# A dpkg-like package manager for .hpkg packages

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Check if running as root for install/remove operations
check_root() {
    if [ "$EUID" -ne 0 ]; then
        echo -e "${RED}Error: This operation requires root privileges${NC}"
        exit 1
    fi
}

# Initialize package database
init_db() {
    mkdir -p /var/lib/hpkg
    touch /var/lib/hpkg/installed
    touch /var/lib/hpkg/status
}

# List installed packages
list_installed() {
    echo -e "${BLUE}Installed packages:${NC}"
    while IFS= read -r line; do
        if [ ! -z "$line" ]; then
            echo "$line"
        fi
    done < /var/lib/hpkg/installed
}

# Show package info
show_info() {
    local pkg="$1"
    if [ -z "$pkg" ]; then
        echo -e "${RED}Error: Package name required${NC}"
        exit 1
    fi

    if grep -q "^$pkg " /var/lib/hpkg/installed; then
        echo -e "${BLUE}Package: $pkg${NC}"
        grep "^$pkg " /var/lib/hpkg/installed
    else
        echo -e "${RED}Package not installed: $pkg${NC}"
        exit 1
    fi
}

# Install package
install_package() {
    check_root
    local pkg="$1"
    if [ -z "$pkg" ]; then
        echo -e "${RED}Error: Package file required${NC}"
        exit 1
    fi

    if [ ! -f "$pkg" ]; then
        echo -e "${RED}Error: Package file not found: $pkg${NC}"
        exit 1
    fi

    echo -e "${YELLOW}Installing $pkg...${NC}"
    ./hpkg-install "$pkg"
}

# Remove package
remove_package() {
    check_root
    local pkg="$1"
    if [ -z "$pkg" ]; then
        echo -e "${RED}Error: Package name required${NC}"
        exit 1
    fi

    if ! grep -q "^$pkg " /var/lib/hpkg/installed; then
        echo -e "${RED}Package not installed: $pkg${NC}"
        exit 1
    fi

    echo -e "${YELLOW}Removing $pkg...${NC}"
    
    # Run pre-remove script if exists
    if [ -f "/var/lib/hpkg/scripts/$pkg/prerm.sh" ]; then
        bash "/var/lib/hpkg/scripts/$pkg/prerm.sh"
    fi

    # Remove files
    if [ -d "/var/lib/hpkg/data/$pkg" ]; then
        rm -rf "/var/lib/hpkg/data/$pkg"
    fi

    # Remove from database
    sed -i "/^$pkg /d" /var/lib/hpkg/installed
    sed -i "/^$pkg /d" /var/lib/hpkg/status

    echo -e "${GREEN}Package removed successfully${NC}"
}

# Show help
show_help() {
    echo -e "${BLUE}Hydra Package Manager (hpkg)${NC}"
    echo "Usage: hpkg [command] [options]"
    echo
    echo "Commands:"
    echo "  install <package.hpkg>    Install a package"
    echo "  remove <package>          Remove a package"
    echo "  list                      List installed packages"
    echo "  info <package>            Show package information"
    echo "  help                      Show this help message"
}

# Main command processing
case "$1" in
    "install")
        install_package "$2"
        ;;
    "remove")
        remove_package "$2"
        ;;
    "list")
        list_installed
        ;;
    "info")
        show_info "$2"
        ;;
    "help"|"")
        show_help
        ;;
    *)
        echo -e "${RED}Unknown command: $1${NC}"
        show_help
        exit 1
        ;;
esac 